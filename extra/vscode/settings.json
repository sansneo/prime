// My old VSCode settings.json
/*
		Run these two commands to get the extensions:
   		code --install-extension vscodevim.vim
			code --install-extension github.github-vscode-theme
*/
{
	"editor.fontFamily": "JetBrainsMono",
	"editor.fontLigatures": false,
	"editor.fontSize": 16,
	"editor.fontWeight": "bold",
	"editor.lineNumbers": "on",
	"editor.glyphMargin": false,
	"editor.guides.indentation": true,
	"editor.minimap.enabled": false,
	"editor.renderLineHighlight": "none",
	"chat.commandCenter.enabled": false,
	"window.closeWhenEmpty": true,
	"window.commandCenter": false,
	"workbench.activityBar.location": "hidden",
	"workbench.enableExperiments": false,
	"workbench.colorTheme": "GitHub Dark Default",
	// explorer
	"explorer.compactFolders": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmPasteNative": false,
	// cursor
	"editor.cursorBlinking": "solid",
	"editor.cursorStyle": "block",
	"editor.cursorSurroundingLines": 10,
	// behaviour
	"editor.autoClosingBrackets": "never",
	"editor.folding": false,
	"editor.formatOnSave": true,
	"editor.roundedSelection": false,
	"editor.stickyScroll.enabled": false,
	"editor.tabSize": 4,
	"editor.wordWrap": "off",
	"files.simpleDialog.enable": true,
	// suggestions
	"editor.acceptSuggestionOnEnter": "on",
	"editor.insertSpaces": false,
	"editor.quickSuggestions": {
		"comments": false,
		"other": true,
		"strings": false
	},
	"editor.wordBasedSuggestions": "off",
	"editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
	// vim
	"vim.handleKeys": {
		"<C-a>": false,
		"<C-b>": false,
		"<C-e>": false,
		"<C-f>": false,
		"<C-k>": false,
		"<C-n>": false,
	},
	"vim.surround": true,
	"vim.useCtrlKeys": true,
	"vim.useSystemClipboard": true,
	// additional
	"chat.agent.enabled": false,
	"chat.disableAIFeatures": true,
	"debug.console.collapseIdenticalLines": false,
	"editor.accessibilitySupport": "off",
	"extensions.ignoreRecommendations": true,
	"security.workspace.trust.untrustedFiles": "open",
	"telemetry.telemetryLevel": "off",
	"terminal.integrated.shellIntegration.enabled": false,
	"window.title": "${dirty}${rootName}${separator}${activeEditorShort}${separator}${profileName}${separator}${appName}",
	"workbench.editor.empty.hint": "hidden",
	"workbench.secondarySideBar.defaultVisibility": "hidden",
	"workbench.startupEditor": "none",
}
