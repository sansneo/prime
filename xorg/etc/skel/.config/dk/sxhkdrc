# fullscreen screenshot (scrot)
super + z
    scrot ~/image/screenshot/%Y-%m-%d-%H%M%S.png -e 'xclip -selection clipboard -target image/png -i $f'

# region screenshot (scrot)
super + shift + z
    scrot -s ~/image/screenshot/%Y-%m-%d-%H%M%S.png -e 'xclip -selection clipboard -target image/png -i $f'

# toggle floating
super + shift + x
	dkcmd win float

# lock screen (slock)
super + shift + c
	slock

# launcher (dmenu)
super + space
	dmenu_run -i -p "Run > " -nb '#000000' -nf '#ffffff' -sb '#4ad66d' -sf '#000000' -fn 'JetBrainsMono:size=14:extrabold'
super + shift + space
	app=$(cat ~/.filter | dmenu -i -p "Run > " -nb '#000000' -nf '#ffffff' -sb '#4ad66d' -sf '#000000' -fn 'JetBrainsMono:size=14:extrabold') ; exec $app

# monitor
super {_,shift + ,ctrl + }{n,m}
	dkcmd mon {view,send,follow} {prev,next}
super + BackSpace
	dkcmd mon view last
super + shift + BackSpace
	dkcmd mon view last

# view previous workspace
super + q
	dkcmd ws prev

# view next workspace
super + e
	dkcmd ws next

# view workspace
super + {_,shift + ,ctrl + }{a,s,d,w,u,i,o,p}
	dkcmd ws {view,send,follow} {1-8}

# view last workspace
super + Tab
	dkcmd ws view last
super + shift + Tab
	dkcmd ws view last

# focus next or previous window
super + {j,k}
	dkcmd win focus {next,prev}

# change master stack size
super + {h,l}
	dkcmd set master {+1,-1}

# move window
super + shift + {h,j,k,l}
	dkcmd win resize {x=-30,y=+30,y=-30,x=+30}

# resize window
super + ctrl + {h,j,k,l}
	dkcmd win resize {w=-30,h=+30,h=-30,w=+30}

# toggle borders
super + {less,greater}
	dkcmd set border width={4,0}
super + shift + {less,greater}
	dkcmd set border width={4,0}

# reload bindings (sxhkd)
super + r
	pkill -USR1 -x sxhkd

# reload window manager (dk)
super + shift + r
	dkcmd restart
