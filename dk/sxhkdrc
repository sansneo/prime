# dmenu(launcher)
alt + p
    dmenu_run -nb '#000000' -nf '#ffffff' -sb '#4ad66d' -sf '#000000' -fn 'CommitMono:size=14:bold' -l 0

# screenshot(screenshots)
alt + shift + o
    scrot -s ~/pictures/screenshots/%Y-%m-%d-%H%M%S.png -e 'xclip -selection clipboard -target image/png -i $f'
@Print
    scrot -s ~/pictures/screenshots/%Y-%m-%d-%H%M%S.png -e 'xclip -selection clipboard -target image/png -i $f'

# focus next or previous window
alt + {j,k}
	dkcmd win focus {next,prev}

# move window
alt + shift + {h,j,k,l}
	dkcmd win resize {x=-30,y=+30,y=-30,x=+30}

# resize window
alt + ctrl + {h,j,k,l}
	dkcmd win resize {w=-30,h=+30,h=-30,w=+30}

# view, send or follow to workspace
alt + {_,shift + ,super + }{a,s,d,w}
	dkcmd ws {view,send,follow} {1,2,3,4}

# close window or swap tiled window in/out of master
alt + shift + {q,space}
	dkcmd win {kill,swap}

# change number of windows in master or first stack
alt + {_,shift + }{i,d}
	dkcmd set {master,stack} {+1,-1}

# cycle tiled windows
alt + {_,shift + }c
	dkcmd win cycle

# toggle fullscreen
alt + shift + f
	dkcmd win full

# change active workspace layout or cycle between them
alt + super + {t,m,g,r,u,c}
	dkcmd set layout {tile,mono,grid,spiral,tstack,cycle}

# view last workspace
alt + Tab
	dkcmd ws view last
alt + BackSpace
	dkcmd ws view last

# toggle borders
alt + bracket{left,right}
    dkcmd set border width {8,0}

# toggle gaps
alt + shift + bracket{left,right}
    dkcmd set border gap {4,0}

# reload sxhkd
alt + shift + x
	pkill -USR1 -x sxhkd

# reload dk
alt + shift + r
	dkcmd restart
